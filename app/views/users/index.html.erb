<h1>Users</h1>

<!-- Container -->
<div class="container" data-controller="index">
  <div class="row">
    <!-- Column 1: user list card -->
    <div class="col-sm-4">
      <%= form_tag users_path, method: :get do %>
        <div id="search-bar" class="my-5 input-group">
          <%= text_field_tag :user_query,
            params[:user_query],
            class: "form-control",
            placeholder: "Find a user"
          %>
          <%= submit_tag "Find", class: "btn btn-secondary" %>
        </div>
      <% end %>
      <% @users.each do |user| %>
        <div class="card-product" data-action="click->index#openUser" data-user-id=<%=user.id%>>
          <div class="card-product-infos">
            <h2><%=user.first_name%> <%= user.last_name %></h2>
            <p>Selina | 1.6km</p>
            <%= link_to '#', class: 'btn btn-success' do %>
              <i class='fas fa-check'></i>
            <% end %>
          </div>
        </div>
      <%end%>
    </div>

    <div class="col-sm-4">
      <div class="whitebck" data-index-target="userdescription">
      </div>
    </div>

    <div class="col-sm-4" data-controller="project-card">
      <%= form_tag users_path, method: :get do %>
          <div id="search-bar" class="my-5 input-group">
            <%= text_field_tag :project_query,
              params[:project_query],
              class: "form-control",
              placeholder: "Find a project"
            %>
            <%= submit_tag "Find", class: "btn btn-secondary" %>
          </div>
        <% end %>
      <% @projects.each do |project|%>
        <div class="user-category-yellow justify-content-between" data-controller="project-card">
          <div data-project-card-target="view" class="js-project-view">
            <h2 data-project-card-target="projectTitle"><%= project.title %></h2>
            </div>
              <i class="fas fa-check-square"></i>
            <div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
