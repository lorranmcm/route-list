<!---Navbar --->

<section class="mb-5">

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= current_user && params[:action] != "home" ? "dark-background" : "light-background"%>">
    <%= link_to root_path, class: "navbar-brand" do %>
      <% if  current_user && params[:action] != "home" %>
        <%= image_tag "LogoWhite.png" %>
      <% else %>
        <%= image_tag "LogoTemplate.png" %>
      <% end %>
    <% end %>

    <div class="d-flex navbar-links <%= current_user && params[:action] != "home" ? "light-color" : "dark-color"%>">
      <%= "|" %>
      <% if params[:action] == "home"%>
        <%= link_to "How it works", root_path(anchor: "how-it-works") %>

      <% end %>
        <%= link_to "Users", users_path(anchor: "Users") %>
        <%= link_to "Projects", projects_path %>
    </div>


    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "#", class: "nav-link-signed-in #{current_user && params[:action] != "home" ? "light-color" : "dark-color"}" do %>
              <i class="fas fa-bell"></i>
            <% end %>
          </li>
          <li class="nav-item dropdown">
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn sign-out" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item btn home-login">
            <%= link_to "Login", new_user_session_path, class: "nav-link-logged-out" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
