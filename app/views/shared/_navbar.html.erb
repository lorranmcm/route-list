<!---Navbar --->

<section <%= current_user && params[:action] != "home" ? "class=dark-background" : "class=light-background"%>>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "LogoTemplate.png" %>
    <% end %>

    <div class="d-flex navbar-links">
      <%= "|" %>

      <%= link_to "How it works", root_path(anchor: "how-it-works") %>

      <%= link_to "Contact", root_path(anchor: "contact") %>
    </div>


    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link-signed-in" %>
          </li>
          <li class="nav-item dropdown">
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn sign-out" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item btn home-login">
            <%= link_to "Login", new_user_session_path, class: "nav-link-logged-out" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
