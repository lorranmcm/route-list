<div class="container">
  <div class="row justify-content-center align-items-center box-center">
    <div class="col-12 col-sm-4 form-container">

      <h2 class="header-password">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "login-input" } %>
        </div>

        <div class="row justify-content-center form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: "btn btn-password" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
