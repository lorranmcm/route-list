<div class="container">
  <div class="row justify-content-center align-items-center box-center">
    <div class="col-12 col-sm-4 form-container">

       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "login-input" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "login-input" } %>

          <%= render "devise/shared/forgot_password" %>

          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <p class="account-reminder">Don't have an account? <%= render "devise/shared/links" %></p>

        <div class="row justify-content-center form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-login" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
